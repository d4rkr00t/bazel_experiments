load("@npm//@bazel/typescript:index.bzl", "ts_project")
load("@build_bazel_rules_nodejs//:index.bzl", "pkg_npm")

package(default_visibility = ["//visibility:public"])

deps = ["//packages/pkg-a"]

pkg_npm(
    name = "pkg-b",
    srcs = ["package.json"],
    deps = [
        ":cjs",
        ":esm",
    ],
)

ts_project(
    name = "cjs",
    srcs = glob([
        "**/*.ts",
    ]),
    declaration = True,
    outdir = "dist/cjs",
    tsconfig = "//:tsconfig.json",
    deps = deps,
)

ts_project(
    name = "esm",
    srcs = glob([
        "**/*.ts",
    ]),
    args = [
        "--target",
        "esnext",
    ],
    declaration = True,
    outdir = "dist/esm",
    tsconfig = "//:tsconfig.json",
    deps = deps,
)
